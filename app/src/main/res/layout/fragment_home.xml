<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.home.HomeFragment"
    android:background="@color/_e5f0ff">

    <View
        android:id="@+id/viewTop"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/white"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/viewTop"
        app:layout_constraintBottom_toBottomOf="@id/viewTop"
        app:srcCompat="@drawable/ic_header_icon"
        android:layout_marginStart="@dimen/dp_16"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btnSelectPdf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/viewTop"
        app:layout_constraintBottom_toBottomOf="@id/viewTop"
        android:layout_marginEnd="@dimen/dp_16"
        android:src="@drawable/ic_select_pdf"
        android:padding="@dimen/dp_8"/>

    <View
        android:id="@+id/viewCode"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        app:layout_constraintTop_toBottomOf="@id/viewTop"
        android:background="@color/_d8e1f5"
        android:visibility="gone"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tlText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/viewCode"
        app:layout_constraintBottom_toTopOf="@id/includeSetting"
        android:layout_marginHorizontal="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:maxLength="2500"
        app:hintEnabled="false"
        app:boxBackgroundMode="outline">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_r6_sol_ff"
            android:fontFamily="@font/roboto"
            android:gravity="start"
            android:hint="@string/hint_write"
            android:maxLength="2500"
            android:paddingTop="@dimen/dp_12"
            android:textColor="@color/_303030"
            android:textColorHint="@color/_999DA7"
            android:textSize="@dimen/sp_24" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.github.barteksc.pdfviewer.PDFView
        android:id="@+id/pdfViewer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/viewCode"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="@dimen/dp_12"
        android:visibility="gone"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvLetterCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/tlText"
        app:layout_constraintBottom_toBottomOf="@id/tlText"
        android:text="@string/letter_count"
        android:layout_marginBottom="@dimen/dp_24"
        android:layout_marginStart="@dimen/dp_16"
        android:textColor="@color/_C7C9CB"
        android:textSize="@dimen/sp_16"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btnRefresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/tlText"
        app:layout_constraintBottom_toBottomOf="@id/tlText"
        android:text="@string/letter_count"
        android:layout_marginBottom="@dimen/dp_12"
        android:layout_marginEnd="@dimen/dp_16"
        android:src="@drawable/ic_refresh"
        android:visibility="gone"/>

    <include
        android:id="@+id/includeSetting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/include_play_layout"
        app:layout_constraintTop_toBottomOf="@id/tlText"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginVertical="@dimen/dp_12"
        android:layout_marginHorizontal="@dimen/dp_16"/>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>