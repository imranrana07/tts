<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/groupSetting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="@dimen/dp_10">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/btnClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/dp_40"
            app:srcCompat="@drawable/ic_close"
            android:padding="0dp"
            android:background="?attr/selectableItemBackground"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/btnSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnClose"
            app:srcCompat="@drawable/ic_okay"
            android:padding="0dp"
            android:background="?attr/selectableItemBackground"/>

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnClose"
            android:background="@drawable/bg_r6_sol_ff"
            android:layout_marginHorizontal="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_40"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvAscii"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="@id/view1"
            app:layout_constraintTop_toTopOf="@id/view1"
            app:layout_constraintBottom_toBottomOf="@id/view1"
            app:layout_constraintEnd_toStartOf="@id/tvUnicode"
            android:text="@string/ascii"
            android:background="@drawable/bg_r4_sol_136"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginStart="@dimen/dp_6"
            android:layout_marginEnd="@dimen/dp_3"
            android:layout_marginVertical="@dimen/dp_6"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvUnicode"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toEndOf="@id/tvAscii"
            app:layout_constraintTop_toTopOf="@id/view1"
            app:layout_constraintBottom_toBottomOf="@id/view1"
            app:layout_constraintEnd_toEndOf="@id/view1"
            android:text="@string/unicode"
            android:textColor="@color/_136EE5"
            android:gravity="center"
            android:layout_marginEnd="@dimen/dp_6"
            android:layout_marginVertical="@dimen/dp_6"

            android:layout_marginStart="@dimen/dp_3"/>

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            app:layout_constraintStart_toEndOf="@id/view1"
            app:layout_constraintTop_toBottomOf="@id/view1"
            android:background="@drawable/bg_r6_sol_ff"
            android:layout_marginHorizontal="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_35"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvText"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="@id/view2"
            app:layout_constraintTop_toTopOf="@id/view2"
            app:layout_constraintBottom_toBottomOf="@id/view2"
            app:layout_constraintEnd_toStartOf="@id/tvSSML"
            android:text="@string/text"
            android:background="@drawable/bg_r4_sol_136"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginStart="@dimen/dp_6"
            android:layout_marginEnd="@dimen/dp_3"
            android:layout_marginVertical="@dimen/dp_6"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvSSML"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toEndOf="@id/tvText"
            app:layout_constraintTop_toTopOf="@id/view2"
            app:layout_constraintBottom_toBottomOf="@id/view2"
            app:layout_constraintEnd_toEndOf="@id/view2"
            android:text="@string/ssml"
            android:textColor="@color/_136EE5"
            android:gravity="center"
            android:layout_marginEnd="@dimen/dp_6"
            android:layout_marginVertical="@dimen/dp_6"

            android:layout_marginStart="@dimen/dp_3"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvSpeed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/speed"
            app:layout_constraintStart_toStartOf="@id/tvAscii"
            app:layout_constraintTop_toBottomOf="@id/view2"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/dp_30"/>

        <include
            layout="@layout/seek_bar"
            android:id="@+id/skSpeed"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:max="4"
            app:layout_constraintStart_toStartOf="@id/tvSpeed"
            app:layout_constraintTop_toBottomOf="@id/tvSpeed"
            app:layout_constraintEnd_toEndOf="parent"
            android:progress="2"
            android:thumbTint="@color/_136EE5"
            android:progressBackgroundTint="@color/_303030"
            app:tickMarkTint="@color/_F6F9FF"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_40" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvPitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pitch"
            app:layout_constraintStart_toStartOf="@id/tvSpeed"
            app:layout_constraintTop_toBottomOf="@id/skSpeed"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/dp_12"/>

        <include
            layout="@layout/seek_bar"
            android:id="@+id/skPitch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/tvPitch"
            app:layout_constraintTop_toBottomOf="@id/tvPitch"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_40"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvVoice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/voice"
            app:layout_constraintTop_toBottomOf="@id/skPitch"
            app:layout_constraintStart_toStartOf="@id/tvSpeed"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/dp_40"
            android:textSize="@dimen/sp_18"/>

        <View
            android:id="@+id/viewVoice"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_50"
            app:layout_constraintTop_toBottomOf="@id/tvVoice"
            app:layout_constraintStart_toStartOf="@id/tvSpeed"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/bg_r6_sol_ff"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_40"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvMale"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/male"
            app:layout_constraintTop_toTopOf="@id/viewVoice"
            app:layout_constraintBottom_toBottomOf="@id/viewVoice"
            app:layout_constraintStart_toStartOf="@id/viewVoice"
            app:layout_constraintEnd_toStartOf="@id/tvFemale"
            android:background="@drawable/bg_r4_sol_136"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="@dimen/sp_16"
            android:layout_marginStart="@dimen/dp_6"
            android:layout_marginVertical="@dimen/dp_6"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvFemale"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/female"
            app:layout_constraintStart_toEndOf="@id/tvMale"
            app:layout_constraintTop_toTopOf="@id/viewVoice"
            app:layout_constraintBottom_toBottomOf="@id/viewVoice"
            app:layout_constraintEnd_toEndOf="@id/viewVoice"
            android:background="@drawable/bg_r4_sol_f6f"
            android:layout_marginEnd="@dimen/dp_6"
            android:layout_marginVertical="@dimen/dp_6"
            android:textColor="@color/_136EE5"
            android:textSize="@dimen/sp_16"
            android:gravity="center"/>


        <androidx.appcompat.widget.AppCompatTextView
