            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/age"
            app:layout_constraintTop_toBottomOf="@id/viewVoice"
            app:layout_constraintStart_toStartOf="@id/tvSpeed"
            android:textColor="@color/_136EE5"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/dp_40"
            android:textSize="@dimen/sp_18"
            android:visibility="gone"/>

        <View
            android:id="@+id/viewAge"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_50"
            app:layout_constraintTop_toTopOf="@id/tvAge"
            app:layout_constraintStart_toStartOf="@id/skSpeed"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/bg_r6_sol_ff"
            android:layout_marginTop="@dimen/dp_35"
            android:layout_marginEnd="@dimen/dp_40"/>

        <androidx.appcompat.widget.AppCompatTextView
